@model List<G_Shop.Models.HoaDon>

@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <h2>Danh sách hoá đơn </h2>
    @using (Html.BeginForm("HoaDon_Ngay", "AdminHome", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <label class="control-label" style="float:left;padding-left:350px;">Từ</label>
                    <div class="col-lg-2">
                        <input type="text" id="ngay_bd" name="ngay_bd" class="form-control custom_datepicker" />
                    </div>

                    <label class="control-label" style="float:left;margin-left:10px;">Đến</label>
                    <div class="col-lg-2">
                        <input type="text" id="ngay_kt" name="ngay_kt" class="form-control custom_datepicker" />
                    </div>
                    <div class="col-lg-1">
                        <button type="submit" id="btnChon" class="btn btn-success">Xem</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Tên người mua
                </th>
                <th>
                    Ngày mua
                </th>
                <th>
                    Tổng tiền
                </th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(i = i + 1)

                    </td>

                    <td>
                        @ViewBag.TenNguoiDung
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayMua)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TongTien)
                    </td>
                    <td>
                        @Html.ActionLink("Xem chi tiết", "CTHD", new { MaHD = item.MaHoaDon })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
