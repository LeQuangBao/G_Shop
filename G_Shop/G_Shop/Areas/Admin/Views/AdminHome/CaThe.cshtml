@model IEnumerable<G_Shop.Models.CaThe>

@{
    ViewBag.Title = "Các con Hamster";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Scripts/dropzone/basic.css" rel="stylesheet" />
<link href="~/Scripts/dropzone/dropzone.css" rel="stylesheet" />
<div class="col-lg-12">
    <h2>Danh sách các con thuộc loài @ViewBag.TenLoai</h2>

    <p>
        <button class="btn btn-success" data-toggle="modal" data-target="#ThemCaThe"><i class="glyphicon glyphicon-plus"></i> Thêm</button>
    </p>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Tên cá thể
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Tuổi
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Tình trạng
                </th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach(var item in Model)
            {
                <tr>
                    <td>@(i = i + 1)
                        <input type="hidden" id="getMaLoai" value="@item.MaLoai">
                    </td>
                    <td>
                        <img src="~/assets/client/images/@(item.HinhAnh.Substring(0, item.HinhAnh.IndexOf("|")))" style="width:50px;height:50px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenCaThe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tuoi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang)
                    </td>

                    <td>
                        @Html.ActionLink("Sửa", "SuaCaThe", new { MaLoai = item.MaLoai, MaCaThe = item.MaCaThe })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.Partial("ThemCaThe", new G_Shop.Models.CaThe())
