@model G_Shop.Models.NguoiDung
@{
    ViewBag.Title = "suanguoidung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="margin-left:130px">
    Sửa người dùng
</h2>
<div class="alert alert-success">
    @Html.ValidationSummary()

</div>
<div style="margin-left:20px">
    @using(Html.BeginForm("suanguoidung", "User", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MaNguoiDung)
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên đăng nhập</label>
                @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giới tính</label>
                <select name="gioitinh" class="form-control">
                    @if(Model.GioiTinh == "Nam") {
                        <option value="Nam" selected>Nam</option>
                            <option value="Nữ">Nữ</option>
                    } else {
                        <option value="Nam">Nam</option>
                            <option value="Nữ" selected>Nữ</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                @Html.TextBoxFor(m => m.NgaySinh, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Vai trò</label>
                <select name="vaitro" class="form-control">
                    @if(Model.VaiTro == "Khách hàng") {
                        <option value="Khách hàng" selected>Khách hàng</option>
                            <option value="Quản trị viên">Quản trị viên</option>
                    } else {
                        <option value="khách hàng">Khách hàng</option>
                            <option value="Quản trị viên" selected>Quản trị viên</option>
                    }
                </select>
            </div>
            @*<div class="form-group">
                    <span class="control-label com-sl-2">
                    </span>
                </div>*@

            <div class="form-group">
                <label class="control-label col-sm-2"></label>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="/Admin/User/Index" class="btn btn-default">Quay lại</a>
            </div>
        </div>
    }
</div>
