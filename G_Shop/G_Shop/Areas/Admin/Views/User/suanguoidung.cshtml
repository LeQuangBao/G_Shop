@model G_Shop.Models.NguoiDung
@{
    ViewBag.Title = "suanguoidung";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa người dùng
   
    </h2>
        @Html.ValidationSummary()
<div style="margin-left:300px">
    @using (Html.BeginForm("suanguoidung", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.MaNguoiDung)
        <div class="form-group">
            <label>Tên đăng nhập</label>
            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
        </div>

        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>

        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control" })
                        </div>

        <div class="form-group">
                            <label>Vai trò</label>
                            <select name="vaitro" class="form-control">
                                @if (Model.VaiTro==0)
                                {
                            <option value="0" selected>Người dùng</option>
                            <option value="1">Quản trị</option>
                               }
                               else
                               {
                            <option value="0">Người dùng</option>
                            <option value="1" selected>Quản trị</option>
                               }
                            </select>
                        </div>

        <button type="submit" class="btn btn-default">Lưu</button>
        <button type="reset" class="btn btn-danger">Hủy</button>

    }
</div>


<div>
    <hr />
    <div class="row">
        <div class="col-lg-offset-1">
            <i class="glyphicon glyphicon-fast-backward"></i>
            <span>
                <a href="/Admin/User/Index">Quay về danh sách</a>
            </span>
        </div>
    </div>
</div>
<div>
   
</div>

