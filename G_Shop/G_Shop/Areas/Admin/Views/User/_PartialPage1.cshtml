
<table id="datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th>Điều khiển</th>
        </tr>
    </thead>
    <tbody>
        @foreach(G_Shop.Models.NguoiDung item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.SoDienThoai</td>
                <td>@item.VaiTro</td>
                <td>
                    <i class="btn btn-primary">
                        <i class="glyphicon glyphicon-pencil">
                            <a href="/Admin/User/suanguoidung?id=@item.MaNguoiDung" style="color:white">Sửa</a>
                        </i>
                       
                    </i>
                </td>
            </tr>
        }
    </tbody>
</table>