                 //};
         };
         //edit building item
         $scope.capnhat = function () {
             console.log($scope.list_temp_inf_edit);
             $http({
                 method: "post",
                 url: "/User/capnhat",
                 data: JSON.stringify($scope.list_temp_inf_edit),
                 dataType: "json",
             })
                .then(function (result) {
                    if (result.data == "ok") {
                        alert("Cập nhật thành công");
