@model G_Shop.Models.NguoiDung
@{
    ViewBag.Title = "editPassword";
    Layout = "~/Views/Shared/_LayoutNotSlide.cshtml";
}

<h2>Đổi mật khẩu</h2>
<hr />
@using (Html.BeginForm("sua", "Account", FormMethod.Post))
{
   
        <div class="form-group formEdit">
            <label class="control-label col-md-3">Mật khẩu cũ</label>
            <div class="col-md-9">
               @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group formEdit">
            <label class="control-label col-md-3">Mật khẩu mới</label>
            <div class="col-md-9">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group formEdit">
            <label class="control-label col-md-3">Nhập lại mật khẩu</label>
            <div class="col-md-9">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
            </div>
        </div>
    
}

