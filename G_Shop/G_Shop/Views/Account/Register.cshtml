@model G_Shop.Models.NguoiDung
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <style>
        #login-box {
            margin-top: 80px;
        }
    </style>


</head>
<body>
    <div id="login-box">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-offset-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2 class="panel-title"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Đăng kí</h2>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                 @Html.ValidationSummary()
                                <div class="form-horizontal">
                                    <div class="form-group has-feedback">
                                        <label class="control-label col-sm-4" for="username">Tên đăng nhập:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
                                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                            @Html.ValidationMessageFor(model => model.TenDangNhap)
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <label class="control-label col-sm-4" for="username">Email:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <label class="control-label col-sm-4" for="username">Số điện thoại:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
                                            <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                                            @Html.ValidationMessageFor(model => model.SoDienThoai)
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <label class="control-label col-sm-4" for="pwd">Mật khẩu:</label>
                                        <div class="col-sm-8">
                                            @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
                                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                            @Html.ValidationMessageFor(model => model.MatKhau)
                                        </div>
                                    </div>
                                    <div class="form-group has-feedback">
                                        <div class="col-lg-offset-4 col-sm-8">
                                            <p>
                                                Bạn đã có tài khoản?
                                                <a href="/Account/Login">Đăng nhập</a>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Đăng kí</button>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-4 col-sm-8">
                                            <p>
                                                
                                                <a href="/Home/Index"><span class="glyphicon glyphicon-home"></span> Về trang chủ</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
