@model G_Shop.Models.HoaDon
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_LayoutNotSlide.cshtml";
}
@Html.ValidationSummary()
@using(Html.BeginForm()) {
    <div class="form-group col-sm-4">
        <label>Người mua</label>
        @Html.DisplayFor(m => m.MaNguoiDung, new { @class = "form-control"})
    </div>
    <div class="form-group col-sm-4">
        <label>Tổng tiền</label>
        @Html.DisplayFor(m => m.TongTien, new { @class = "form-control"})
    </div>
    <div class="form-group col-sm-4">
        <label>Ngày mua</label>
        @Html.DisplayFor(m => m.NgayMua, "{0:dd/MM/yyyy}", new { @class = "form-control"})
    </div>
    <div class="form-group col-sm-6">
        <label>Ngày giao hàng</label>
        <input class="form-control" type="date" name="ngayGiaoHang"/>
    </div>
    <div class="form-group col-sm-6">
        <label>Địa chỉ</label>
        @Html.TextBoxFor(m => m.DiaChi, "{0:MM/dd/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group col-sm-12">
        <button class="btn btn-default" type="submit">Đặt hàng</button>
    </div>
}
<p class="form-group">HÀNG ĐÃ CHỌN
<table class="table">
    <tr>
        <th>Tên cá thể</th>
        <th>Giá</th>
    </tr>
    @foreach(var p in ShoppingCart.Cart.Items) {
        <tr>
            <td>@p.TenCaThe</td>
            <td>@Html.FormatValue(p.GiaBan, "{0:c}")</td>
        </tr>
    }
</table>
    </p>