<Window x:Class="GShop_Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GShop_Win"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1224">
    <Grid x:Name="grdBrowserHost">
        <WebBrowser x:Name="brw" Margin="0,33,-0.4,0.4" />
        <Button x:Name="rfe" Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="0,9,0,0"/>
        <TextBox x:Name="link" HorizontalAlignment="Left" Height="19" Margin="80,9,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="327"  KeyDown="OnKeyDownHandler"/>
        <Button x:Name="go" Content="Go" HorizontalAlignment="Left" Margin="412,8,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
