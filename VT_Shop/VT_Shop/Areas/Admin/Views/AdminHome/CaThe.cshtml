@model IEnumerable<VT_Shop.Models.Tree>

@{
    ViewBag.Title = "Các con Hamster";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Scripts/dropzone/basic.css" rel="stylesheet" />
<link href="~/Scripts/dropzone/dropzone.css" rel="stylesheet" />
<div class="col-lg-12">
    <h2>Danh sách các cây thuộc loài @ViewBag.TenLoai

    <span style="float:right">
        <button class="btn btn-primary" data-toggle="modal" data-target="#ThemTree"><i class="glyphicon glyphicon-plus"></i> Thêm</button>
    </span>
    </h2>
    @if(ViewBag.Message != "") {
        <div class="alert alert-success">
            <strong>@ViewBag.Message</strong>
        </div>
    }    
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                Tổng số cá thể:
            </dt>

            <dd id="tongTree">
            </dd>
        </dl>
    </div>
    <br />
    <div class="col-md-12">
        <label>Lọc tình trạng cá thể: </label>
        @using (Html.BeginForm("Tree", "AdminHome", FormMethod.Get, new { @id = "form" }))
        {
            <input type="hidden" name="LoaiId" value="@ViewBag.LoaiId" />
            <label class="radio-inline"><input type="radio" name="i" value="0" />Tất cả</label>
            <label class="radio-inline"><input type="radio" name="i" value="1" />Sẵn bán</label>
            <label class="radio-inline"><input type="radio" name="i" value="2" />Đã bán</label>
            <label class="radio-inline"><input type="radio" name="i" value="3" />Đã mất</label>
        }
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Tên cây
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Tình trạng
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @(i = i + 1)
                        <input type="hidden" id="getLoaiId" value="@item.LoaiId">
                    </td>
                    <td>
                        <img src="~/assets/client/images/@(item.HinhAnh.Substring(0, item.HinhAnh.IndexOf("|")))" style="width:50px;height:50px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenTree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.FormatValue(item.GiaBan, "{0:c}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang)
                    </td>
                    <td>
                        <a href="http://localhost:60181/Admin/AdminHome/SuaTree?LoaiId=@item.LoaiId&TreeId=@item.TreeId">
                        <button class="btn btn-primary">
                            Sửa
                        </button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="hidden" value="@i" id="tong" />
</div>
@Html.Partial("ThemTree", new VT_Shop.Models.Tree())
<input type="hidden" name="tinhtrang" value="@ViewBag.tinhtrang" />
<script type="text/javascript">
    $(document).ready(function () {
        $("#tongTree").text($("#tong").val());
        var i = $("input[name='tinhtrang']").val();
        if (i != null)
        {
            if (i == 0)
                $("input[name='i']:eq(0)").prop('checked', true);
            if (i == 1)
                $("input[name='i']:eq(1)").prop('checked', true);
            if (i == 2)
                $("input[name='i']:eq(2)").prop('checked', true);
            if (i == 3)
                $("input[name='i']:eq(3)").prop('checked', true);
        }
        $("input[name='i']").off('change').on('change', function () {
            $("#form").submit();
        });
    });
</script>