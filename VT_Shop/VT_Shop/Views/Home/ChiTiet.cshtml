@model VT_Shop.Models.Tree

@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Chi tiết</h2>
<div class="col-md-6">
    <div>
        <img id="img_01" src="~/assets/client/images/@(Model.HinhAnh.Substring(0,Model.HinhAnh.IndexOf("|")))" class="img_detail" />
    </div>
</div>

<div class="col-md-6">
    <dl class="dl-horizontal">


        <dt>
            Tên cây:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTree) @(Model.TinhTrang != "Sẵn bán" ? "Đã bán" : "")
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd style="color:red;font-weight:bold">
            @Html.FormatValue(Model.GiaBan, "{0:c}")
        </dd>
        <dt>

        </dt>
        <dd>


            @if (Session["user"] != null && Model.TinhTrang == "Sẵn bán")
            {
                <button class="add-to-cart btn-lg" data-id="@Model.TreeId">
                    <span class="glyphicon glyphicon-shopping-cart">

                    </span>
                </button>
                @*<a href="#"><img style="width:50px;height:30px" class="add-to-cart" data-id="@Model[i].TreeId" src="~/assets/client/images/Add to basket.png" /></a>*@
            }
        </dd>
    </dl>
</div>
